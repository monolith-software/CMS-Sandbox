{% block body %}

{% block site_header '' %}
<div id="site-header">

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="site-header-tile">
                    <h1>Smart Core</h1>
                    <h2>Content Managment System</h2>
                </div>

                <div class="site-header-tile" style="float: right;">
                    Система управления сайтами основанная на технологиях
                    <br />
                    <img src="{{ asset('bundles/site/images/php2.png') }}" title="PHP Language" style="width: 78px; margin: 10px 0px 0px 0px;">
                    <img src="{{ asset('bundles/site/images/symfony_white_01.png') }}" title="Symfony Framework" style="width: 200px; margin: 10px 0px 0px 10px;">
                    <img src="{{ asset('bundles/site/images/mysql2-2.png') }}" title="MySQL Database" style="width: 100px; margin: 0px 0px 0px 25px;">

                </div>

                <div class="clear"></div>

                <div class="col-md-12 site-header-buttons">
                    <a href="/download/" class="btn btn-success btn-lg"><span class="glyphicon glyphicon-download-alt"></span> Скачать Smart Core CMS</a>

                    <a href="#demo" class="btn btn-warning btn-lg"><span class="glyphicon glyphicon-eye-open"></span> Попробовать демо</a>
                </div>

            </div>
        </div>
    </div>

</div>

<div id="site-menu">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {% block main_menu main_menu %}
            </div>
        </div>
    </div>
</div>


<div class="container">

    {% include '@SmartCore/flash_messages.html.twig' %}

    <div class="row">
        <div id="content" class="col-md-12 site-block">
            {% block content content %}
        </div>

        <div class="col-md-12 site-block" style="margin-top: 25px;">
            <script type="text/javascript" src="//vk.com/js/api/openapi.js?115"></script>

            <div class="col-md-4">
                <!-- VK Widget -->
                <div id="vk_groups0"></div>
                <script type="text/javascript">
                    VK.Widgets.Group("vk_groups0", {mode: 0, width: "220", height: "600", color1: 'FFFFFF', color2: '2B587A', color3: '5B7FA6'}, 19770383);
                </script>
            </div>

            <div class="col-md-8">
                <!-- VK Widget -->
                <div id="vk_groups2"></div>
                <script type="text/javascript">
                    VK.Widgets.Group("vk_groups2", {mode: 2, wide: 1, width: 600, height: "600"}, 19770383);
                </script>
            </div>
        </div>

        <div class="col-md-12 site-block" style="margin-top: 25px;">
            <h2 style="text-align: center;">Полностью испытанные технологии</h2>
            <section class="logos">
                <ul class="logolist">
                    <li>
                        <div class="icon"><a href="http://php.net/" target="_blank"><img src="/bundles/site/images/php2_logo.png" width="100" alt="PHP" title="PHP" /></a></div>
                        <h3>PHP</h3>
                    </li>
                    <li>
                        <div class="icon"><a href="http://symfony.com/" target="_blank"><img src="/bundles/site/images/symfony_logo.png" width="100" alt="Symfony" title="Symfony" /></a></div>
                        <h3>Symfony</h3>
                    </li>
                    <li>
                        <div class="icon"><a href="http://twig.sensiolabs.org/" target="_blank"><img src="/bundles/site/images/twig_logo.png" width="100" alt="Twig" title="Twig"/></a></div>
                        <h3>Twig</h3>
                    </li>
                    <li>
                        <div class="icon"><a href="http://www.doctrine-project.org/" target="_blank"><img src="/bundles/site/images/doctrine_logo.png" width="100" alt="Doctrine" alt="Doctrine" title="Doctrine"/></a></div>
                        <h3>Doctrine</h3>
                    </li>
                    <li class="sec">
                        <div class="icon"><a href="http://jquery.com/" target="_blank"><img src="/bundles/site/images/jquery_logo.png" width="100" alt="jQuery" alt="jQuery" title="jQuery"/></a></div>
                        <h3>jQuery</h3>
                    </li>
                    <li class="sec">
                        <div class="icon"><a href="https://getcomposer.org/" target="_blank"><img src="/bundles/site/images/composer_logo.png" width="100" alt="Composer" alt="Composer" title="Composer"/></a></div>
                        <h3>Composer</h3>
                    </li>
                    <li class="sec">
                        <div class="icon"><a href="http://github.com" target="_blank"><img src="/bundles/site/images/octocat.png" width="100" alt="Github" title="Github" /></a></div>
                        <h3>Github</h3>
                    </li>
                    <li class="sec">
                        <div class="icon"><a href="http://swiftmailer.org/" target="_blank"><img src="/bundles/site/images/swiftmailer_logo.png" width="100" alt="Swiftmailer" alt="Swiftmailer" title="Swiftmailer"/></a></div>
                        <h3>Swiftmailer</h3>
                    </li>
                    <li class="sec">
                        <div class="icon"><a href="http://ckeditor.com/" target="_blank"><img src="/bundles/site/images/ckeditor_logo.png" width="100" alt="CKeditor" alt="CKeditor" title="CKeditor"/></a></div>
                        <h3>CKeditor</h3>
                    </li>
                </ul>
            </section>
        </div>
    </div>

</div>

<div id="site-footer">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                &copy; 2015 Smart Core Web Solutions
                {% block footer footer %}
            </div>
        </div>
    </div>
</div>

{% endblock body %}
